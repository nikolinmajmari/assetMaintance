{% extends 'base.html.twig' %}

{% block body %}
    <div class="p-4">
        <div class="row">
            <div class="col-md-2">
                <a class=" btn btn-dark" href="{{ path('home') }}"><i class="fas fa-arrow-left"></i>&nbsp;Back</a>
            </div>
            <div class="col-md-7">
                <h1>Buildings</h1>
            </div>
            <div class="col-md-3">
                <div style="float:right">
                    <a class="btn btn-primary" href="{{ path('asset_building_new') }}"><i class="fas fa-plus"></i> &nbsp;Add New </a>
                </div>
            </div>
        </div>
        <div class="p2">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for building in buildings %}
                        <tr>
                            <td>{{ building.id }}</td>
                            <td>{{ building.name }}</td>
                            <td><a href="{{ path('asset_building_delete',{id:building.id}) }}" type="button" class="btn btn-danger">Delete</a>
                            <a class="btn btn-secondary" href="{{ path('asset_building_edit',{id:building.id}) }}"><i class="fas fa-pen"></i>&nbsp;Edit</a>
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div>

        </div>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

