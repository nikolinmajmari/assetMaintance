{% extends 'base.html.twig' %}

{% block body %}
    <div class="p-2"></div>
    <div class="container">
        <div class="row">
            <div class="col-3">
                <a class=" btn btn-dark" href="{{ path('home') }}"><i class="fa fa-arrow-left"></i>&nbsp;Back</a>
            </div>
            <div class="col-5">
                <h1>Devices</h1>
            </div>
            <div class="col-4">
                <div style="float:right">
                    <a class="btn btn-primary" href="{{ path('asset_device_type_new') }}"><i class="fas fa-plus"></i>&nbsp;Add New </a>
                </div>
            </div>
        </div>
        <div class="p-2"></div>
        <div class="p2">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for type in types %}
                        <tr>
                            <td>{{ type.id}}</td>
                            <td>{{ type.name}}</td>
                            <td>{{ type.description }}</td>
                            <td>
                                <a href="{{ path('asset_device_type_edit',{id:type.id}) }}" class="btn btn-secondary"> Edit</a>
                                <a href="{{ path('asset_device_type_delete',{id:type.id}) }}" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div>

        </div>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

